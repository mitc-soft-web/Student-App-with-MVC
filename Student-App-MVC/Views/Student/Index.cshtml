<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Department</h3>
    </div>
</div>


<body>
@foreach (var std in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Item Table
                </header>

                <table class="table table-striped table-advance table-hover">
                    <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> First Name</th>
                        <th><i class="icon_profile"></i> Last Name</th>
                        <th><i class="icon_profile"></i> Matric Number</th>
                        <th><i class="icon_calendar"></i> Reg Date</th>
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                    <tr>
                        <td>@std.FirstName</td>
                        <td>@std.LastName</td>
                        <td>@std.MatricNumber</td>
                        <td>@std.CreatedDate</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-action="EditStudent" asp-route-id="@std.Id"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success" asp-action="GetStudent" asp-route-id="@std.Id"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@std.Id"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>

                    </tbody>
                </table>
            </section>
        </div>
    </div>
}

<!-- container section end -->
<!-- javascripts -->
<script src="assets1/js/jquery.js"></script>
<script src="assets1/js/bootstrap.min.js"></script>
<!-- nicescroll -->
