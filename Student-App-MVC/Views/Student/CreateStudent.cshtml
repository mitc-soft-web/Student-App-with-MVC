@model Student_App_MVC.Models.DTOs.Student.CreateStudentRequestModel

@{
    ViewBag.Title = "Student";
    Layout = "";
}

<div class="container" xmlns="http://www.w3.org/1999/html">
<div class="row justify-content-center">
    <div class=" card col-md-6">
        <div class="card-body ">
            <div class="bg-light">
                <h1 class="tagcolor" style="color:mediumblue">Create</h1>
                <p class="tagcolor" style="color:mediumblue">Please use this box to create a Item.</p>
                <hr class="tagcolor" style="color:mediumblue">

            </div>
            <form asp-action="CreateStudent" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label asp-for="FirstName" class="control-label" style="display-model: RoleName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                        
                    <div class="form-group col-sm-6">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="form-group col-sm-6">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="StateOfOrigin" class="control-label"></label>
                            <input asp-for="StateOfOrigin" class="form-control" />
                            <span asp-validation-for="StateOfOrigin" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                            
                            
                    </div>


                    <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                        <label class="control-label">Departments</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                            <option value="">--Select Department--</option>
                        </select>
                    </div>
                        
                </div>

                <div class="form-group ">
                    <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                </div>

            </form>
            
                
        </div>

    </div>
        

    @* @section Scripts { *@
    @*     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    @* }</div> *@
</div>
</div>